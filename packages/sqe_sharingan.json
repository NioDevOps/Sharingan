{
  "default_parameters": {
    "dest_base_path": "/data/app/sqe_sharingan"
  },
  "package_conf": {
    "package_name": "sqe_sharingan",
    "scm": "git_new",
    "include_paths": [
      "release/bin",
      "release/conf",
      "release/static",
      "release/ansinio_files"
    ]
  },
  "install_conf": {
    "link": [
      {
        "src": "release/bin",
        "dest": "$(dest_base_path)/bin"
      },
      {
        "src": "release/conf/",
        "dest": "$(dest_base_path)/conf"
      },
      {
        "src": "release/static/",
        "dest": "$(dest_base_path)/static"
      }
    ],
    "copy": [],
    "additional_ops": [
      "mkdir $(dest_base_path)/logs || true"
    ]
  },
  "start": "systemctl start sqe_sharingan",
  "stop": "touch $(dest_base_path)/stoped && systemctl stop sqe_sharingan"
}
